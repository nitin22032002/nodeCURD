      },
      "/addtask": {
        "post": {
          "tags": ["Task Manager"],
          "summary": "For Add New Task",
          "parameters":[{
              "name":"token",
              "in":"header",
              "description": "token",
              "example":{
               "Authorization":"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJkYXRhIjoiNjFjMTZiYTZkNzZiODBhMmZlOGM0NDdlIiwiaWF0IjoxNjQwMDg5MTYxfQ.b5f6fRzRaJIYLE8iYXwLqoAh5lT7NmXsgBtKOffpIR0"
                }
            },{
              "name":"task",
              "in":"body",
              "description":"New Task Data",
              "schema":{
                "example":{
                    "task": "NaN",
                    "tag": "Personal",
                    "status": 1
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "new task created",
              "schema":{
                "$ref":"#/definitions/task"
              }
              
            },
            "401":{
              "description": "Invalid User....."
            },
              "500":{
                "description": "Server Error...."
              }
          }
        }
      },
      "/deletetask/{id}": {
        "delete": {
          "tags": ["Task Manager"],
          "summary": "For Delete Task",
          "parameters":[{
              "name":"token",
              "in":"header",
              "description": "token",
              "example":{
               "Authorization":"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJkYXRhIjoiNjFjMTZiYTZkNzZiODBhMmZlOGM0NDdlIiwiaWF0IjoxNjQwMDg5MTYxfQ.b5f6fRzRaJIYLE8iYXwLqoAh5lT7NmXsgBtKOffpIR0"
                }
            },{
              "name": "id",
              "in": "path",
              "required": true,
              "description": "ID of task",
              "type": "string",
              "example":{"id":"61c1e829a1b14eeca4920128"}
            }
          ],
          "responses": {
            "200": {
              "description": "Status of task delete or not"
              
              
            },
            "401":{
              "description": "Invalid User....."
            },
              "500":{
                "description": "Server Error...."
              }
          }
        }
      },
      "/updatetask/{id}": {
        "put": {
          "tags": ["Task Manager"],
          "summary": "For Home Page",
          "parameters":[{
              "name":"token",
              "in":"header",
              "description": "token",
              "example":{
               "Authorization":"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJkYXRhIjoiNjFjMTZiYTZkNzZiODBhMmZlOGM0NDdlIiwiaWF0IjoxNjQwMDg5MTYxfQ.b5f6fRzRaJIYLE8iYXwLqoAh5lT7NmXsgBtKOffpIR0"
                }
            },{
              "name": "id",
              "in": "path",
              "required": true,
              "description": "ID of task",
              "type": "string",
              "example":{"id":"61c1e829a1b14eeca4920128"}
            },
            {
              "name":"task",
              "in":"body",
              "description":"New Task Data",
              "schema":{
                "example":{
                    "task": "NaN",
                    "tag": "Personal",
                    "status": 1
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Task Updated"
              ,
              "schema":{
                "$ref":"#/definitions/task"
              }
              
            },
            "401":{
              "description": "Invalid User....."
            },
              "500":{
                "description": "Server Error...."
              }
          }
        }
      }
    },
    "definitions": {
      "credentialToken":{
        "required": ["status", "token"],
        "properties": {
          "token": {
            "type": "string",
            "uniqueItems": true
          },
          "status": {
            "type": "boolean"
          }
        },
        "example":{
          "status":true,
          "token":"eyJhbGciOiJIUzI1NiIsInR5cCI6Ikfake@pXVCJ9.eyJkYXRhIjoiNjFjMTZiYTZkNzZiODBhMmZlOGM0NDdlIiwiaWF0IjoxNjQwMDg5MTYxfQ.b5f6fRzRaJIYLE8iYXwLqoAh5lT7NmXsgBtKOffpIR0"
        }
      },
      
      "ErrorModel":{
        "required": ["status", "error"],
        "properties": {
          "error": {
            "type": "object"
          },
          "status": {
            "type": "boolean"
          }
        },
        "example":{
          "status":false,
          "error":"according to error"  
        }
      },
      "User": {
        "required": ["name", "_id", "emailid","password","date"],
        "properties": {
          "_id": {
            "type": "integer",
            "uniqueItems": true
          },
          "emailid": {
            "type": "string",
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "password":{
            "type":"string"
          },
          "date":{
            "type":"date",
            "default":"Current Date"
          }
      },
      "example":{
        "name":"fake",
        "emailid":"fake@gmail.com",
        "password":"123456789",
        "_id":"61c1e829a1b14eeca4920128",
        "date":"current date"
      }
    },
      "task": {
        "required": ["task", "_id", "userid","tag","date","status"],
        "properties": {
          "_id": {
            "type": "integer",
            "uniqueItems": true
          },
          "tag": {
            "type": "string",
            "default":"Personal"
          },
          "task": {
            "type": "string"
          },
          "status":{
            "type":"integer",
            "default":1
          },
          "userid":{
            "type":"string"
          },
          "date":{
            "type":"date",
            "default":"Current Date"
          }
      },
      "example":{
        "_id": "61c1e829a1b14eeca4920128",
        "userid": "61c16ba6d76b80a2fe8c447e",
        "task": "NaN",
        "tag": "Personal",
        "status": 1,
        "date": "2021-12-21T14:43:53.862Z"
      }
      }
    }
  }

  